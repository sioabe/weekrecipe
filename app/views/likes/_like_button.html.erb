<% if current_user.fav?(recipe) %>
  <div class="button_wrapper">
    <%= form_for(current_user.likes.find_by(recipe_id: recipe), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :recipe_id, recipe.id %>
      <%= f.submit 'お気に入り解除', class: 'btn-flat-border-danger' %>
    <% end %>
  </div>
<% else %>
  <div class="button_wrapper">
    <%= form_for(current_user.likes.build) do |f| %>
      <%= hidden_field_tag :recipe_id, recipe.id %>
      <%= f.submit 'お気に入り登録', class: 'btn-flat-border-enter' %>
    <% end %>
  </div>
<% end %>
