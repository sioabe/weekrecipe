<div class="text-center">
  <h1>管理者ログイン</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(:supervisor_session, url: supervisor_login_path) do |f| %>

      <div class="form-group">
        <%= f.label :supervisor_email, '管理者ID' %>
        <%= f.email_field :supervisor_email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :supervisor_password, 'Password' %>
        <%= f.password_field :supervisor_password, class: 'form-control' %>
      </div>

      <%= f.submit '管理者ログイン', class: 'btn btn-primary btn-block' %>
    <% end %>

  </div>
</div>